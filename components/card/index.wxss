.container {
  width: 702rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.titleContainer {
  width: 400rpx;
  height: 80rpx;
  background: rgba(115, 157, 233, 1);
  border-radius: 12rpx 12rpx 68rpx 68rpx;
  border: 4rpx solid rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.titleText {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
}

.extContainer {
  width: 100%;
  border-radius: 12rpx;
  background-color: white;
  padding-top: 64rpx;
  position: relative;
  top: -64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
