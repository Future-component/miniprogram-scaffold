.inter-wrapper {
  padding: 35rpx;
  font-weight: 400;
  font-family: Inter,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Helvetica Neue,sans-serif,Arial;
  -webkit-font-feature-settings: "ss01";
  font-feature-settings: "ss01";
  -webkit-font-smoothing: antialiased;
}

.typography-header {
  margin: 0;
  color: #96a0bf;
  letter-spacing: -.07rpx;
  font-weight: 700;
  font-size: 52rpx;
  line-height: 2;
}

.typography-paper {
  color: #0e101a;
  letter-spacing: 0;
  font-weight: 400;
  font-size: 32rpx;
  line-height: 2;
}

.alerts-markBase {
  border-bottom: 3px solid hsla(0,0%,100%,0);
  background-position: 50% calc(100% + 3px);
  background-repeat: no-repeat;
  contain: layout style;
}

.alerts-tag {
  font-size: 24rpx;
  vertical-align: middle;
  position: relative;
  top: -8rpx;
  left: 0;
  margin-left: 10rpx;
  margin-right: 6rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  height: 48rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
  border-radius: 50%;
  color: #ffffff;
  font-weight: bold;
}

.alerts-tag-correctness {
  background: #ea1537;
}

.alerts-tag-clarity {
  background: #4a6ee0;
}

.alerts-correctness {
  padding-bottom: 1px;
  border-bottom: 3px solid #ff99ab;
  transition: border-bottom-color .5s linear;
}

.alerts-clarity {
  padding-bottom: 1px;
  border-bottom: 3px solid #99c2ff;
  transition: border-bottom-color .5s linear;
}

.alerts-correctness-actived {
  background-color: #ff99ab;
  border-bottom: 3px solid #ea1537;
}

.alerts-clarity-actived {
  background-color: #99c2ff; 
  border-bottom: 3px solid #4a6ee0;
}

.alerts-markAnimated {
  -webkit-animation: alerts-markUnderlineBorder 75ms ease;
  animation: alerts-markUnderlineBorder 75ms ease;
}

@keyframes alerts-markUnderlineBorder{
  0%{background-size:100% 0}
  to{background-size:100% 12%}
}